        "@storybook/addon-links": "6.0.0-rc.1",
        "@storybook/addon-storysource": "6.0.0-rc.1",
        "@storybook/addon-viewport": "6.0.0-rc.1",
        "@storybook/web-components": "6.0.0-rc.1",
        "@storybook/addons": "6.0.0-rc.1",
        "@storybook/html": "6.0.0-rc.1",
        "@storybook/source-loader": "6.0.0-rc.1",

        "lit-html": "^1.2.1",
        "web-component-analyzer": "^1.0.3"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "scripts": {
        "build": "cross-env rollup -c ./scripts/rollup.config.js",

        "storybook": "yarn storybook:meta && yarn storybook:build && yarn storybook:start",
        "storybook:start": "start-storybook -s ./dist -p 6006",
        "storybook:build": "rollup -c ./.storybook/rollup.config.js",
        "storybook:meta": "web-component-analyzer src --outFiles .storybook/build/custom-elements.json"
    }
